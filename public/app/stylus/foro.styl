.foro
  background white
  box-shadow 0px 1px 1.5px rgba(0,0,0,0.06),0px 1px 1px rgba(0,0,0,0.12)
  padding .5em

.foro__user
  margin 0
  padding 0
  //display flex
  img
    margin 0 0 0 1.5em
    width 50px
    height 50px
    border-radius 50%
.foro__user-name
  font-style italic
  font-weight bold
  margin -.9em 0 0 .5em
  font-size 15px

.foro__title
  font-size 16px

