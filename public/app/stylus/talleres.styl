/* start comment */
.question__actions
  margin-left 1em
  border-top 2px solid accent_color
  margin 0
  width 100%

.action__comment
  cursor pointer
  margin-left .5em
.question__date
  display flex
  justify-content flex-end
  padding 0 1em .5em 0
  p
    margin 0
/* end comment */

.talleres__card
  height 25vw
  //margin 2em 0

.title__taller_header
  background accent_color
  color white
  padding .4em
  text-align center
  box-shadow 0px 1px 1.5px rgba(0,0,0,0.06),0px 1px 1px rgba(0,0,0,0.12)

//responsive
.taller
  background white
  box-shadow 0px 1px 1.5px rgba(0,0,0,0.06),0px 1px 1px rgba(0,0,0,0.12)
  padding .5em
  position relative

.taller-author
  align-self baseline
  background white
  box-shadow 0px 1px 1.5px rgba(0,0,0,0.06),0px 1px 1px rgba(0,0,0,0.12)
  margin 0 0 1em .5em
  width 92vw
  order -1

.taller_container
  display flex
  flex-wrap wrap

.taller__contenido
  padding 1em
  font-style italic
  text-align justify
  color rgba(primary_text, 9)
  pre
    font-family serif
    overflow hidden

.taller__date
  font-style italic
  color white
  margin-left .5em
  font-size 14px

.taller-author__description
  margin -2em 0 0 5em
  width 13em

.talller-auhtor__foto
  display flex
  margin 0
  padding 0
  img
    border-radius 1px
    height 65px
    margin-left .5em
    width 65px

.taller-author__name
  font-style italic
  font-weight bold
  margin-left .5em

.taller-author__title
  background accent_color
  box-shadow 0px 1px 1.5px rgba(0,0,0,0.06),0px 1px 1px rgba(0,0,0,0.12)
  color white
  padding .5em
  text-align center

.taller__title
  color white
  text-align center

.taller-question__form
  background white
  box-shadow 0px 1px 1.5px rgba(0,0,0,0.06),0px 1px 1px rgba(0,0,0,0.12)
  margin-top 1em
  padding .5em
  display flex
  .pregunta
    border-width 0 0 1px
    border-bottom 1px solid secondary_text
    outline 0
    width 75%
    &:focus
      transition all ease 1s
      border-bottom 2px solid primary_color
      font-weight 400
  .send__pregunta
    outline 0
    width 40px
    height 40px
    border 0
    background btn-float-color
    padding .2em
    border-radius 50%
    box-shadow 0px 1px 1.5px rgba(0,0,0,0.06),0px 1px 1px rgba(0,0,0,0.12)
    margin-left .5em
    transition all ease .2s
    &:active
      background rgba(white, .1)
  .icon-create
    color white

.taller__phrase
  margin 9em 0 0 0
  background rgba(secondary_text, .1)
  padding 1px
  padding-left .5em
  border-radius 5px
  border solid 2px rgba(secondary_text, .5)
  font-style italic
  font-size 16px
  color rgba(primary_text, .8)

.taller__video
  display block
  iframe
    width 99%
    height 30em
    margin 1.5em 0 0 .3em

.taller_wrapper
  margin 0 0 0 .5em
  width 92vw

.user__pregunta
  width 55px
  img
    width 50px
    height 50px

.form-chat
  width 100%
  margin-left 1em

//card item question
.taller_question__item
  margin .6em 0 0 0
  background white
  box-shadow 0px 1px 1.5px rgba(0,0,0,0.06),0px 1px 1px rgba(0,0,0,0.12)
  &:nth-child(2)
    margin-top 2em

.question__item_avatar
  margin 0
  padding 0
  display flex
  img
    width 40px
    height 40px
    border-radius 50%
    margin .5em 0 0 .5em

.question__item_name
  margin 0 0 0 .5em
  font-weight bold
  font-style italic

.item__p
    margin 0 0 0 5em
    padding 0 0 .5em 0
    font-family sans-serif
    font-size 18px

@media (min-width: 992px)
  .taller-author
    margin 0 0 0 1em
    width 25vw
    order 1

  .taller-author__description
    margin -2em 0 0 5em
    width 12em

  .taller-question__form
    .pregunta
      width 90%
    .send__pregunta
      width 50px
      height 50px

  .taller__phrase
    margin 7em 0 0 0

  .taller_wrapper
    margin 0 0 0 1em
    width 70vw

  .question__item_avatar
    img
      width 40px
      height 40px
      margin .5em 0 0 .5em

@media (min-width: 1200px)

  .taller-author__description
    width 15em

  .taller-question__form
    .pregunta
      width 92%
