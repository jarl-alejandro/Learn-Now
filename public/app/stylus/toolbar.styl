// toolbar

.paper-shadow
  box-shadow 0 2px 5px 0 rgba(0, 0, 0, 0.26)

.paper-toolbar
  color #fff
  background primary_color

.app-bar, .navdrawer-container
  transition: transform 0.3s ease-out


.promote-layer
  backface-visibility hidden

.app-bar-container
  display flex
  width 100%
  height 64px
  position relative
  flex-direction row
  margin 0 auto

.app-bar
  display block
  width 100%
  position fixed
  top 0
  left 0
  //overflow hidden
  z-index 1
  margin-bottom 40px

.app-bar .logo
  flex 1
  font-size 1.3em
  margin 0 16px
  padding 0
  color #fefefe
  float none
  max-width none
  font-weight 400
  line-height 64px

.app-bar button
  width 64px
  height 64px
  background-image none
  background-color transparent
  border none
  padding 0
  transition background-color 0.2s ease-out
  -webkit-tap-highlight-color transparent

button.menu img
  height 24px
  width 24px

.menu
  outline none

nav
  background white
  height calc(100% - 60px)
  left 0
  top 4em
  position absolute
  margin 0
  position fixed
  width 0
  z-index 1000
  overflow scroll
  transition all ease 1s

.mostar-nav
  width 16em

//user
.User
  display none
.User-avatar
  img
    width 50px
    height 50px
    border-radius 50%
    position absolute
    top .5em
    right 5%

.User-name
  p
    position absolute
    top .2em
    right 10%
    font-weight 600
    font-size 17px
    display none

.UserToolbar-avatar
  position relative
  img
    width 55px
    height 55px
    border-radius 50%
    position absolute
    left -2em
    //box-shadow 0 2px 5px 0 rgba(0, 0, 0, 0.26)

.UserToolbar
  background url("../img/picaso.jpg") no-repeat
  background-position center
  background-size cover
  margin 0
  padding 1px 0

.logo
  h1
    text-align center
    color primary_text
    font-style italic

.UserToolbar-name
  position relative
  left 1.9em
  top .5em
  p
    margin 0
    &:nth-child(2)
      margin-bottom 3em
      font-size 14px
      font-style italic
    &:nth-child(1)
      margin-top 2em
      font-weight bold

.search-icon
  position absolute
  top .7em
  left 2.9em
  color secondary_text
  z-index 1

.Search-input
  padding 8px 2px 8px 35px
  box-shadow 0px 1px 1.5px rgba(0,0,0,0.06),0px 1px 1px rgba(0,0,0,0.12)
  font-size 16px
  width 60%
  font-weight 300
  border 0
  color secondary_text
  transition all 200ms ease
  background light-primary-color
  outline 0
  border-radius 3px
  position absolute
  top .7em

.busrador__menu
  margin 1em 0
  padding 0

.lista--curso
  background white
  position absolute
  top 2.8em
  left 4em
  width 63%
  height 7em
  overflow-y scroll
  color primary_text
  display none

.mostar-lista__curso
  display block

.item__search
  list-style  none
  width 98.4%
  background accent_color
  padding .1em
  margin 1em 0
  &:hover
    background rgba(accent_color, .5)
  a
    display flex
    width 98.4%
    height 100%
    padding .5em
    text-decoration none
    color primary_text
    text-align center
    font-weight bold
    span
      margin-left .5em
      margin-top .3em

.no-hay
  font-weight bold
  text-align center

.foto__buscar
  width 25px
  height 25px

.listMenu
  list-style none
  .item
    padding .5em
    &:hover
      background rgba(primary_text, .2)
  a
    text-decoration none
    color primary_text

.icon-item
  float right
  position relative
  bottom .2em
  color rgba(primary_text, .9)
