.inciar-title
  margin 0
  padding 0
  color white
  font-size 1.5em
  text-align center
  background #fd4a4a
  padding .2em

.founders
  background #36474F
  margin -.3em 0 0 0
  height 40em
  display flex
  flex-wrap wrap
  justify-content center

@media (min-width: 768px)
  .founders
    height 25em

.avatar__founder
  img
    width 15em
    height 15em
    border-radius 50%
    border 4px solid primary_dark_color
.founder__about
  font-weight bold
.nf
  text-align center
  margin 0
