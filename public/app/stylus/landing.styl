.about__learnNow
  font-family serif, arial
  font-style italic
  font-weight bold
  font-size 18px
  margin 0 auto
  padding 1.5em
  position relative
  text-align center
  top -2em
  width 70vw

.conoce__title
  background fondo_material
  h3
    font-size 2em
    margin 0
    padding 0
    color white
    text-align center
  i
    color white
    font-size 5em
    text-align center
    display block

.landing__learn-now
  //background url("../imgs/laptop.png") center bottom no-repeat #36474F;
  background url("../img/laptop.png") center bottom fondo_material no-repeat
  display block
  background-size 40% auto
  min-height 800px

