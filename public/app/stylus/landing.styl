.pertenecer
  background #fd4a4a
  color white
  border 0
  padding .5em 5em
  box-shadow 0px 1px 1.5px rgba(0,0,0,0.06),0px 1px 1px rgba(0,0,0,0.12)
  border-radius 2px
  position absolute
  top 1em
  right 1em
  font-weight bold
  outline 0

.centrar
  display flex
  justify-content center

.iniciar
  width 95%
  transition all ease 1s
  position absolute
  top -500px
  left .5em

.mostar__iniciar
  position absolute
  top 5em
  left .5em

.face
  width 70%
  margin 1em 15%

.portada__learn
  background url("../img/portada.jpg")
  background-size cover
  background-position: center
  height 347px

@media (min-width: 768px)
  .iniciar
    width 50%
    left 15em
  .mostar__iniciar
    left 15em
