/* start responder pregunta */
.title__recurso
  text-align center

.recurso__clase
  padding .5em

.action__favorite
  margin-left 1em

.respuestas
  background rgba(#B6B6B6, .2)
  margin-bottom 2em

.responder__textarea
  width 98.5%
  resize none
  border-width 0 0 1px
  outline none
  margin .5em 0 0 0
  height 3.5em
  &:focus
    border-bottom 2px solid primary_color

.responder__btn
  background btn-float-color
  border 0
  width 50px
  height 50px
  color white
  border-radius 50%
  position absolute
  top 2.5em
  right 1em
  outline none

.respuesta__card
  background white
  box-shadow 0px 1px 1.5px rgba(0,0,0,0.06),0px 1px 1px rgba(0,0,0,0.12)
  margin-bottom 1em
  margin-left 2.5em
  margin-top 1.5em

.respuesta__avatar
  display flex
  margin 0
  padding 0
  img
    border-radius 50%
    margin .5em 0 0 .5em

.respuesta__name
  font-weight bold
  margin 0 0 0 .5em

.respuesta__resp
  margin -.5em 0 0 4em
  padding .5em

.respuesta__fecha
  margin -1em 0 0 15em
  padding .5em
  display flex
  justify-content flex-end
/* end responder pregunta */
.love
  cursor pointer
  font-size 20px !important
  color #FF5252
.comment-icon
  color primary_dark_color
  font-size 20px !important

.comment_action
  position absolute
  cursor pointer
  left 3em
  bottom 1em
  span
    font-weight bold
    position absolute
    top 2px
    left 22px

.answer_action-a
  position absolute
  bottom 1.1em
  left .5em
  span
    font-weight bold
    position absolute
    top 1px
    left 1.4em

.header_class-title
  text-align center
  color white
  position relative
  top 2em
  font-size 2em
  box-shadow 0px 1px 1.5px rgba(0,0,0,0.06),0px 1px 1px rgba(0,0,0,0.12)

.section__class
  display block
  padding 12.5em 0

.card__actions
  width 95vw
  box-shadow 0px 1px 1.5px rgba(0,0,0,0.06),0px 1px 1px rgba(0,0,0,0.12)
  margin 0

.card__video
  margin 0
  //width 95vw

.embedVideo
  iframe
    width 95vw
    height 25em

.acctions__tabs-menu
  padding 0
  background accent_color
  box-shadow 0px 1px 1.5px rgba(0,0,0,0.06),0px 1px 1px rgba(0,0,0,0.12)
  margin 0
  text-align center
  li
    display block
    transition all ease 2s
    padding .5em 0
    border-bottom 1px solid white
    a
      padding .5em 0
      width 100%
      color white
      cursor pointer
      text-align center

.card__form
  position relative

.card__form__button
  background accent_color
  border 0
  box-shadow 0 2px 5px 0 rgba(0, 0, 0, 0.26)
  padding .7em
  outline none
  border-radius 50%
  position absolute
  top 2.5em
  right 1em

.card__form__textarea
  resize none
  outline none
  border-width 0 0 1px
  width 99%
  height 4em

.card__form__textarea:focus
  transition all ease 1s
  border-bottom 2px solid primary_color
  font-weight 400

.card-answer__article
  margin 0 0 1em 0
  box-shadow 0px 1px 1.5px rgba(0,0,0,0.06),0px 1px 1px rgba(0,0,0,0.12)
  background white

.card-answer
  padding .5em
  margin 3em 0
  height 25em
  border-top 1px solid #ddd
  overflow-y scroll

.card-answer__figure--avatar
  margin 0
  padding 0
  display flex
  img
    width 45px
    height 45px

.card-answer__figure--name-user
  display inline-block
  margin 0
  height 0
  margin 5px 0 0 .5em
  font-style italic

.card-answer__p
  margin 10px 0 10px 5px

.card_answer__actions
  border-top 2px solid accent_color

.card_answer__actions
  display flex
  justify-content space-between

.answer__date
  margin 0 .5em 0 0
  font-style italic
  p
    position relative
    top .8em

.card__description-class
  width 95vw
  margin 1em 0
  p
    padding .7em
    font-style italic
  h4
    background accent_color
    color white
    margin 0
    padding 3px
    text-align center

@media (min-width: 992px)
  .acctions__tabs-menu
    li
      display inline-block
      border-bottom none
      a
        padding .6em 1.9em
        &:hover
          background rgba(white, 0.5)

    .tab-c
      border-left 1px solid white
      border-right 1px solid white
   .card__actions
     width 59em
     margin 0 0 0 1.5em

   .card__description-class
     width 100%

   .embedVideo
     iframe
       width 36em
       height 25em

   .section__class
     padding 12.5em 1.5em
     display flex

@media (min-width: 1200px)
  .acctions__tabs-menu
    .tab-p
      a
        padding .6em 4.3em
    .tab-u
      a
        padding .6em 3.5em

  .embedVideo
    iframe
      width 43.75em
      height 25em

